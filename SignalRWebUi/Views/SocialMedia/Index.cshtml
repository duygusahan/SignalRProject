@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Sosyal Medya İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Sosyal Medyalar ile ilgili işlemleri aşağıda geçekleştirebilirsiniz :

                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">İcon </th>
                                        <th scope="col">Başlık </th>
                                        <th scope="col">Link</th>
                                        <th scope="col">Sil</th>
             

                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>

                                            <td><img src="@item.Icon" alt="Product Image" style="width: 100px; height: auto;" /></td>
                                           
                                            <td>@item.Title</td>
                                            <td>@item.Url</td>






                                            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-info">Yeni Sosyal Medya Hesabı Ekle</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
