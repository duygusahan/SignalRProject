@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Günün İndirimleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Günün İndirimleri Listesi </div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Günün İndirimleri ile ilgili işlemleri aşağıda geçekleştirebilirsiniz :

                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ürün</th>
                                        <th scope="col">İndirim Oranı</th>
                                      

                                        <th scope="col">Detaylar</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                        <th scope="col">Aktif Yap</th>
                                        <th scope="col">Pasif Yap</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Amount</td>

                                            <td><a href="/Discount/Details/@item.DiscountId" class="btn btn-outline-warning">Detay</a></td>
                                            <td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger">Sil</a></td>

                                            <td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Discount/ChangeStatusToTrue/@item.DiscountId" class="btn btn-outline-info">Aktif</a></td>
                                            <td><a href="/Discount/ChangeStatusToFalse/@item.DiscountId" class="btn btn-outline-dark">Pasif</a></td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirim Ekle</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


