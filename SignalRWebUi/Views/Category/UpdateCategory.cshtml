@model SignalRProject.DtoLayer.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Kategori İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Kategori Güncelle</div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="categoryname"> Yeni Kategori Adını Girin</label>
                                    <input type="text" class="form-control" asp-for="CategoryName" id="categoryname">

                                </div>

                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Kategoriyi Güncelle</button>

                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

