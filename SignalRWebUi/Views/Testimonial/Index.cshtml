@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Referans İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referansların Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Referanslar  ile ilgili işlemleri aşağıda geçekleştirebilirsiniz :
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Referans Sahibinin Adı Soyadı</th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col">Yorum</th>
                                        <th scope="col">Referans Sahibinin Görsel Yolu</th>
                                        <th scope="col">Referansın Durumu</th>
                                       
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                        <th scope="col">Aktif Yap</th>
                                        <th scope="col">Pasif Yap</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>@item.Comment</td>
                                            <td><img src="@item.ImageUrl" alt="Product Image" style="width: 100px; height: auto;" /></td>
                                            
                                            <td>@item.Status</td>
                                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Testimonial/ChangeStatusToTrue/@item.TestimonialId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Testimonial/ChangeStatusToTrue/@item.TestimonialId" class="btn btn-outline-info">Aktif</a></td>
                                            <td><a href="/Testimonial/ChangeStatusToFalse/@item.TestimonialId" class="btn btn-outline-dark">Pasif</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary">Yeni Referans Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

