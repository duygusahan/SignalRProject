@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Referans İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Yeni Referans Girişi</div>
                            </div>
                            <input type="hidden" asp-for="TestimonialId" />
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Name">Referans Sahibinin Adını Giriniz</label>
                                    <input type="text" class="form-control" asp-for="Name" id="Name">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Title">Referans Başlığı Giriniz</label>
                                    <input type="text" class="form-control" asp-for="Title" id="Title">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Comment">Referans Açıklama alanı</label>
                                    <input type="text" class="form-control" asp-for="Comment" id="Comment">
                                </div>
                            </div>


                            <div class="card-body">
                                <div class="form-group">
                                    <label for="ImageUrl">Referans Sahibi Görsel Yolu</label>
                                    <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                                </div>
                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Referans Ekle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

