@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">İletişim İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">İletişim Alanını Güncelleyin</div>
                            </div>
                            <input type="hidden" asp-for="ContactId" />
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Location"> Konum</label>
                                    <input type="text" class="form-control" asp-for="Location" id="Location">

                                </div>

                            </div>

                            <div class="card-body">
                                <div class="form-group">
                                    <label for="PhoneNumber">  Telefon Numarası</label>
                                    <input type="text" class="form-control" asp-for="PhoneNumber" id="PhoneNumber">

                                </div>

                            </div>


                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Mail">  Mail Adresi</label>
                                    <input type="text" class="form-control" asp-for="Mail" id="Mail">

                                </div>

                            </div>


                            <div class="card-body">
                                <div class="form-group">
                                    <label for="FooterDescription"> Açıklama</label>
                                    <input type="text" class="form-control" asp-for="FooterDescription" id="FooterDescription">

                                </div>

                            </div>

                         




                            <div class="card-action">
                                <button class="btn btn-primary"> Güncelle</button>

                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

