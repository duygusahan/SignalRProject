@model List<SignalRProject.DtoLayer.AboutDto.ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Hakkımızda İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürünlerin Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Ürün ile ilgili işlemleri aşağıda geçekleştirebilirsiniz :
                               
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Görsel</th>
                                        <th scope="col">Başlık </th>
                                        <th scope="col">Açıklama </th>
                                        
                                        
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AboutId</td>
                                            <td><img src="@item.ImageUrl" alt="About Image" style="width: 100px; height: auto;" /></td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>



                                            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>