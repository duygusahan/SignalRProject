@model SignalRProject.DtoLayer.AboutDto.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Ana Sayfa Hakkımızda Alanı İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Hakkımızda Alanını Güncelleyin</div>
                            </div>
                            <input type="hidden" asp-for="AboutId" />
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Title"> Yeni Başlık Girin</label>
                                    <input type="text" class="form-control" asp-for="Title" id="Title">

                                </div>

                            </div>

                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Title"> Yeni Görsel Yolunu Girin</label>
                                    <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">

                                </div>

                            </div>

                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Description"> Yeni Açıklama Girin</label>
                                    <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>

                                </div>

                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary"> Güncelle</button>

                            </div>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
