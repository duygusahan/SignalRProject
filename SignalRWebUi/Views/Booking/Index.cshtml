@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Rezarvasyon İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezarvasyon Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                               Rezarvasyon ile ilgili işlemleri aşağıda geçekleştirebilirsiniz :

                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ad Soyad</th>
                                        <th scope="col">Telefon Numarası</th>
                                       
                                        <th scope="col">Kişi Sayısı</th>
                                        <th scope="col">Rezarvasyon Durumu</th>
                                        <th scope="col">Sil</th>


                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.BookingId</td>
                                            <td>@item.Name</td>
                                            <td>@item.Phone</td>
                                           
                                            
                                            <td>@item.PersonCount</td>
                                            <td>Rezarvasyon Alındı</td>



                                            <td><a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-outline-danger ">Sil</a></td>
                                            <td><a href="/Booking/UpdateBooking/@item.BookingId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
