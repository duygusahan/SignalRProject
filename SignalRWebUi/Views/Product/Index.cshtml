@model List<SignalRProject.DtoLayer.ProductDtos.GetProductsWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Ürün İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürünlerin Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Ürün ile ilgili işlemleri aşağıda geçekleştirebilirsiniz :
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ürünün Adı</th>
                                        <th scope="col">Ürünün Kategorisi</th>
                                        <th scope="col">Ürünün Açıklaması</th>
                                        <th scope="col">Ürünün Görseli</th>
                                        <th scope="col">Ürünün Fiyatı </th>
                                        <th scope="col">Durum </th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th>@count</th>
                                            <td>@item.ProductName</td>
                                            <td>@item.category.CategoryName</td>
                                            <td>@item.Description</td>
                                            <td><img src="@item.ImageUrl" alt="Product Image" style="width: 100px; height: auto;" /></td>
                                            <td>@item.Price</td>
                                            <td>@item.Status</td>
                                            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <a href="/Product/CreateProduct" class="btn btn-outline-primary">Yeni Ürün Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

